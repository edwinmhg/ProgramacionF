program serie
 implicit none
integer :: i
real :: n, suma, it, pi

  pi = 1
  it = 1
 write(,) 'Valor de pi/4:'
     do i=1, 50
     t = t * (-1)
     n = 2 * i + 1
     n = 1 / n
     n = n * it
     pi = pi + n
	if (i.EQ.10) then
	write(,) ' '
	write(,) '10:', pi
        end if

	if (i.EQ.20) then
	write(,) ' '
	write(,) '20:', pi
        end if

	if (i.EQ.30) then
	write(,) ' '
	write(,) '30:', pi
        end if

	if (i.EQ.40) then
	write(,) ' '
	write(,) '40:', pi
        end if

	if (i.EQ.50) then
	write(,) ' '
	write(,) '50:', pi
        end if

end do

end program serie
